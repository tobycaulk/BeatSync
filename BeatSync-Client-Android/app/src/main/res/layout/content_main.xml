<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/manageTracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/managePlaylists"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/managePlaylists"
        android:layout_marginTop="60dp"
        android:text="Tracks" />

    <Button
        android:id="@+id/managePlaylists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageTracks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Playlists" />

    <Button
        android:id="@+id/manageSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/managePlaylists"
        android:layout_alignStart="@+id/managePlaylists"
        android:layout_below="@+id/managePlaylists"
        android:layout_marginTop="18dp"
        android:text="Session" />
</RelativeLayout>